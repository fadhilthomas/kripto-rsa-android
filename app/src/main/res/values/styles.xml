<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorSc</item>
        <item name="colorPrimaryDark">@color/colorSc</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:typeface">serif</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Child" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorPrimaryDark">@color/colorAccent</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:typeface">serif</item>
    </style>

    <style name="SplashScreenCustom" parent="Theme.AppCompat.NoActionBar"/>

    <style name="DialogPilih" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="AppCompatAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:textAllCaps">false</item>
        <item name="android:typeface">serif</item>
    </style>

</resources>
